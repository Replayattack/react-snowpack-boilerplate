{
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(json|[jt]sx?|html)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "check-types": "tsc",
    "validate": "npm-run-all --parallel check-types check-format lint build"
  },
  "dependencies": {
    "formik": "^2.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-error-boundary": "^2.3.1",
    "react-query": "^2.12.1",
    "react-query-devtools": "^2.4.4",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@snowpack/app-scripts-react": "^1.10.0",
    "@snowpack/plugin-build-script": "^2.0.6",
    "@tailwindcss/ui": "^0.5.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^12.1.3",
    "@types/react": "^16.9.48",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "autoprefixer": "^9.8.6",
    "eslint": "^7.7.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jest-dom": "^3.1.7",
    "eslint-plugin-jest-formatting": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "eslint-plugin-testing-library": "^3.7.0",
    "husky": "^4.2.5",
    "is-ci-cli": "^2.1.2",
    "jest": "^26.4.2",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^10.2.13",
    "msw": "^0.20.5",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.1.1",
    "snowpack": "^2.9.3",
    "tailwindcss": "^1.7.5",
    "typescript": "^3.9.7"
  }
}
